        <form action="/write" name="join.form" method="post" onsubmit="return form_check()">
            <fieldset class="contact-form">
                <legend></legend>
                <label for="">아이디</label><span class="text-box"><input type="text" id="u_id"></span>
                <label for="">비밀번호</label><span class="text-box"><input type="text" id="pwd"></span>
