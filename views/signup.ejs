                        <option value="01">01</option>
                        <option value="02">02</option>
                        <option value="03">03</option>
                        <option value="04">04</option>
                        <option value="05">05</option>
                        <option value="06">06</option>
                        <option value="07">07</option>
                        <option value="08">08</option>
                        <option value="09">09</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                    </select></span>
                    <span class="text-box"><input type="text" class="birth-box" placeholder="일(2자)" id="day"></span>
                </div>
                <label for="">성별</label><span class="text-box">
                    <select name="" id="gender">
                        <option value="">성별</option>
                        <option value="m">남자</option>
                        <option value="f">여자</option>
                    </select>
                </span>
                <label for="">E-MAIL</label><span class="text-box"><input type="text" placeholder="선택입력"></span>
                <label for="">휴대전화</label><span class="text-box"><select name="" id="">
                    <option value="">대한민국 +82</option>
                    <option value="">1</option>
                    <option value="">2</option>
                    <option value="">3</option>
                    <option value="">4</option>
                    <option value="">5</option>
                    <option value="">6</option>
                </select></span>
                <div class="mobile-wrap"><span class="text-box"><input type="text" placeholder="전화번호 입력" id="mobile"></span><span class="mobile-box">인증번호 받기</span></div>
                <span class="text-box"><input type="text" placeholder="인증번호 입력"></span>
                <label for="">학생 / 학부모</label><span class="text-box">
                    <select name="" id="gender">
                        <option value="">학생 / 학부모 선택</option>
                        <option value="m">학생</option>
                        <option value="f">학부모</option>
                    </select>
                </span>
                <div class="btn-box">
                <button>Prev</button>
                <button>Submit</button>
                </div>
